#! /bin/bash -l
#SBATCH --export=NONE
#SBATCH -M HOST
#SBATCH -p STANDARDQ
#SBATCH --account=ACCOUNT
#SBATCH --time=06:00:00
#SBATCH --nodes=1


function test_fail {
if [[ $1 != 0 ]]
then
    cd ${base}
    python bin/track_task.py fail --jobid=${SLURM_JOBID} --finish_time=`date +%s`
    exit $1
fi
}

calid=CALID
base=BASEDIR
obsnum=OBSNUM

# apply calibration
cd ${base}
python bin/track_task.py start --jobid=${SLURM_JOBID} --start_time=`date +%s`

cd ${base}/${obsnum}

# look for the calibrator solutions file
calfile=($( ls -1t ${base}/${calid}/${calid}_*_solutions.bin))
calfile=${calfile[0]}

applysolutions ${obsnum}.ms ${calfile}
test_fail $?

cd ${base}
python bin/track_task.py finish --jobid=${SLURM_JOBID} --finish_time=`date +%s`
